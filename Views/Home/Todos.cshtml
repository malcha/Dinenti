                                    </div>
                                    @if (item.Talles != null)
                                    {
                                        foreach (var t in item.Talles)
                                        {
                                            if (String.IsNullOrWhiteSpace(t))
                                            {
                                                <div class="women" style="min-height:16px">
                                                    <h5>@t</h5>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="women" style="min-height:16px">
                                                    <h5>@t</h5>
                                                </div>
                                            }

                                        }

                                        if (item.TienePrecio)
                                        {
                                            <div class="women" style="min-height:20px">
                                                <p class="iva">Estos precios no incluyen IVA</p>
                                            </div>
                                        }
                                        <div class="women" style="min-height:35px">
                                            <h5>Colores: @item.Colores</h5>
                                        </div>
                                    }
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>


